@model RegisterVM
@{
	ViewBag.Title = "Register";
} <h2>Register</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Add" asp-controller="Player">
	<div class="row mb-2">
		<label class="col-form-label col-md-2">UserName:</label> <div class="col-md-4">
			<input asp-for="Username" class="form-control" />
		</div>
		<div class="col">
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group form-check">

		<input type = "text" id = "passField" class="form-control" for="pass" name="pass" value="@ViewBag.Password" />
		<button id="clipboardbutton" class="btn btn-success" type="button" onclick="copyToClipboard('clipboardbutton', 'passField')">Copy to Clipboard</button>

		<strong>Make note of this password, and give to the user.</strong>
	</div>
	<div class="row">
		<div class="col offset-md-2">
			<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</div>
</form> 